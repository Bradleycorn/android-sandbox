<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="72dp"
                android:paddingLeft="16dp"
                android:paddingTop="18dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"
               >
    <LinearLayout
        android:id="@+id/recordings_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/item_title"
        android:layout_alignBottom="@+id/item_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_recording"/>

        <TextView
            android:id="@+id/recordings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="28"/>

    </LinearLayout>


    <TextView
        android:id="@+id/soundboard"
        android:text="SBD"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_subtitle"
        android:layout_alignBottom="@+id/item_subtitle"/>


    <!--ImageView
        android:id="@+id/soundboard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_subtitle"
        android:layout_alignBottom="@+id/item_subtitle"
        android:src="@drawable/ic_sbd"
        android:layout_alignRight="@+id/recordings_wrapper"
        android:layout_alignLeft="@+id/recordings_wrapper"
        android:layout_alignStart="@+id/recordings_wrapper"/-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textStyle="bold"
        tools:text="07-08-1978 Red Rocks Ampitheatre"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/recordings_wrapper"
        android:layout_toStartOf="@+id/recordings_wrapper"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_subtitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:textIsSelectable="false"
        android:textStyle="normal"
        tools:text="Morrison, CO"
        android:layout_alignRight="@+id/item_title"
        android:layout_alignEnd="@+id/item_title"/>



</RelativeLayout>